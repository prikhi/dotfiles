auto-reload yes
reload-time 30
reload-threads 5

browser "w3m %u"
html-renderer "w3m -dump -T text/html" 
notify-program notify-send
notify-screen yes
notify-beep yes

download-retries 5
download-full-page yes

color background          white   black
color listnormal          white   black
color listfocus           white   blue   bold
color listnormal_unread   blue    black
color listfocus_unread    white   blue   bold
color info                white   blue   bold
color article             white   black

# vim-like bindings
bind-key j down
bind-key k up
bind-key ^J next-feed
bind-key ^K prev-feed
bind-key SPACE pagedown
bind-key b pageup
bind-key z sort
bind-key Z rev-sort
bind-key g home
bind-key G end
bind-key ^R random-unread
bind-key U reload-urls
bind-key o open-in-browser-and-mark-read
bind-key O open-in-browser
bind-key o open-in-browser article
