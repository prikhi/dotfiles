{
    "diagnostic.displayByAle": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "elm",
        "haskell"
    ],
    "coc.source.omni.filetypes": ["ledger"],
    "languageserver": {
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": [
                "elm"
            ],
            "rootPatterns": [
                "elm.json"
            ],
            "initializationOptions": {
                "elmAnalyseTrigger": "save"
            }
        },
        "haskell": {
            "command": "hie-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "stack.yaml",
                "cabal.config",
                "package.yaml",
                "cabal.project"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        },
        "purescript": {
            "command": "purescript-language-server",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "purescript"
            ],
            "rootPatterns": [
                "bower.json",
                "psc-package.json",
                "spago.dhall"
            ]
        }
    },
    "prettier.tabWidth": 4,
    "yaml.validate": true,
    "yaml.format.enable": true
}
