# Pull the git repository for a package from the AUR
function aur-clone() {
    cd "$HOME/Projects/AUR/"
    if [ ! -d "$1/.git" ]; then
        git clone "ssh://aur@aur.archlinux.org/$1.git"
    fi
    cd "$1/"
}

